<% @photo = photo %>
<%= error_messages_for :photo %>
<div id="upload_form">
<form target="upload_frame" action="/photos/create" id="upload_form" method="post" enctype="multipart/form-data">
  <%= hidden_field :photo, :album_id %>

  <p>
  <%= label :photo, :image %> <br />
  <%= file_field :photo, :image %>
  </p>
  <%= hidden_field_tag :for_album, true %>
  <p>
    <%= submit_tag "Submit" %>
  </p>
</form>
<iframe id="upload_frame" name="upload_frame" style="display: none"></iframe>
</div>
